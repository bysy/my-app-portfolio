<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:buttonStyle">@style/Button</item>
    </style>


    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:padding">@dimen/button_padding</item>

        <!-- needs API level 21:
        <item name="android:colorButtonNormal">@color/button_background</item>
        -->

        <!-- interferes with ripples:
        <item name="android:background">@color/button_background</item>
        -->
    </style>


    <style name="Headline" parent="AppTheme">
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textColor">@color/headline</item>
    </style>

</resources>
